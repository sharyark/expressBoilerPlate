<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TODO App</title>
</head>
<body>
    <h1>TODO List</h1>

    <!-- Form for Creating New TODO -->
    <form action="/todos" method="POST">
        <label for="title">Title:</label><br>
        <input type="text" id="title" name="title" required><br>

        <label for="description">Description:</label><br>
        <textarea id="description" name="description" rows="4" required></textarea><br>

        <label for="dueDate">Due Date:</label><br>
        <input type="date" id="dueDate" name="dueDate" required><br>

        <label for="completed">Completed:</label>
        <input type="checkbox" id="completed" name="completed"><br>

        <button type="submit">Add Todo</button>
    </form>

    <hr>

    <!-- Displaying TODOs -->
    <ul>
        <% todos.forEach(todo => { %>
            <li>
                <strong>Title:</strong> <%= todo.title %><br>
                <strong>Description:</strong> <%= todo.description %><br>
                <strong>Due Date:</strong> <%= todo.dueDate.toLocaleDateString() %><br>
                <strong>Completed:</strong> <%= todo.completed ? 'Yes' : 'No' %><br>

                <!-- Form for Deleting TODO -->
                <form action="/todos/<%= todo._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>

                <!-- Form for Updating TODO -->
                <form action="/todos/<%= todo._id %>?_method=PUT" method="POST">
                    <label for="updateTitle">Update Title:</label><br>
                    <input type="text" id="updateTitle" name="title" required><br>

                    <label for="updateDescription">Update Description:</label><br>
                    <textarea id="updateDescription" name="description" rows="4" required></textarea><br>

                    <label for="updateDueDate">Update Due Date:</label><br>
                    <input type="date" id="updateDueDate" name="dueDate" required><br>

                    <label for="updateCompleted">Update Completed:</label>
                    <input type="checkbox" id="updateCompleted" name="completed"><br>

                    <button type="submit">Update</button>
                </form>
                <br>
            </li>
        <% }) %>
    </ul>
</body>
</html>
